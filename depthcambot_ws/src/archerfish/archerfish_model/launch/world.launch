<?xml version="1.0" encoding="UTF-8"?>

<launch>
  
  <arg name="open_rviz" default="true"/>

  <include file="$(find archerfish_model)/launch/robot_description.launch"/>

  <arg name="world_file" default="$(find archerfish_model)/worlds/house.world"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find archerfish_model)/urdf/archerfish.xacro'"/>

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -param robot_description -model archerfish"/>
</launch>
